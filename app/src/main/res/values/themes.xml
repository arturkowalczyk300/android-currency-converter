<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="myTextColor">#000000</item>
        <item name="myBackgroundColor">#FFFFFF</item>
        <item name="myButtonBackgroundColor">?attr/colorPrimary</item>
        <item name="currencyFragmentBackgroundColor">#3E6C94</item>
        <item name="spinnerSelectedItemTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>